<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .checkout-container {
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .form-label {
            font-weight: 500;
        }

        .order-summary {
            background-color: #fff;
            padding: 1.5rem;
            border-radius: 0.5rem;
            border: 1px solid #ddd;
        }

        .order-summary h5 {
            margin-bottom: 1rem;
        }

        .order-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            margin-right: 1rem;
        }

        .order-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .order-item-details {
            flex: 1;
        }

        .order-item-price {
            font-weight: 600;
        }

        .border-top-dashed {
            border-top: 1px dashed #ccc !important;
        }
    </style>
</head>

<body>
    <div class="container checkout-container">
        <div class="row">
            <!-- Thông tin nhận hàng (Bên Trái) -->
            <div class="col-md-8 mb-4">
                <div class="bg-white p-4 rounded border">
                    <h4 class="section-title">Thông tin nhận hàng</h4>
                    <form>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email" required
                                value="<%= user ? user.email : '' %>" />
                        </div>
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Họ và tên</label>
                            <input type="text" class="form-control" id="fullName" placeholder="Nguyễn Văn A" required
                                value="<%= user ? user.name : '' %>" />
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" id="phone" placeholder="0123456789" required
                                value="<%= user ? user.phone : '' %>" />
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" id="address" placeholder="Số nhà, đường, phường/xã"
                                required />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="district" class="form-label">Quận/Huyện</label>
                                <input type="text" class="form-control" id="district" placeholder="VD: Quận 1" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="city" class="form-label">Tỉnh/Thành phố</label>
                                <input type="text" class="form-control" id="city" placeholder="VD: TP.HCM" />
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Vận chuyển & Thanh toán -->
                <div class="bg-white p-4 rounded border mt-4">
                    <h4 class="section-title">Vận chuyển</h4>
                    <div class="mb-3">
                        <select class="form-select">
                            <option value="" disabled selected>Chọn phương thức giao hàng</option>
                            <option value="standard">Giao hàng tiêu chuẩn (3-5 ngày)</option>
                            <option value="express">Giao hàng nhanh (1-2 ngày)</option>
                            <option value="cod">Ship COD</option>
                        </select>
                    </div>
                    <h4 class="section-title">Thanh toán</h4>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="paymentVNPay" />
                        <label class="form-check-label" for="paymentVNPay">
                            Thanh toán qua VNPay/QR
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="paymentBank" />
                        <label class="form-check-label" for="paymentBank">
                            Chuyển khoản ngân hàng
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="paymentCOD" checked />
                        <label class="form-check-label" for="paymentCOD">
                            Thanh toán khi nhận hàng (COD)
                        </label>
                    </div>
                </div>
            </div>

            <!-- Đơn hàng (Bên Phải) -->
            <div class="col-md-4">
                <!-- Giả sử bạn có container, row, col bao quanh sẵn -->
                <div class="card">
                    <div class="card-header">
                        <h5>Order Items</h5>
                    </div>
                    <div class="card-body">
                        <!-- Kiểm tra nếu cart tồn tại và có item -->
                        <% if (cart && cart.length> 0) { %>
                            <!-- Lặp qua từng item trong cart -->
                            <% cart.forEach(item=> { %>
                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <img src="<%= item.image %>" class="img-fluid" alt="<%= item.name %>" />
                                    </div>
                                    <div class="col-md-6">
                                        <h5>
                                            <%= item.name %>
                                        </h5>
                                        <p>Price: $<%= item.price %>
                                        </p>
                                        <p>Quantity: <%= item.quantity %>
                                        </p>
                                    </div>
                                </div>
                                <hr />
                                <% }); %>

                                    <!-- Tính tổng số lượng và giá tiền -->
                                    <p>
                                        Total Items:
                                        <%= cart.reduce((sum, item)=> sum + item.quantity, 0) %>
                                    </p>
                                    <p>
                                        Total Price:
                                        $<%= cart.reduce((sum, item)=> sum + item.price * item.quantity, 0).toFixed(2)
                                            %>
                                    </p>
                                    <!-- Nút xác nhận đặt hàng -->
                                    <a href="/place-order" class="btn btn-success w-100">
                                        Place Order
                                    </a>
                                    <% } else { %>
                                        <p>Your cart is empty.</p>
                                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>